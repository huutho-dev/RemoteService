<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/textViewRobotoVietnam"
            style="@style/TextTitleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="BXH Việt nam"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textFonts="RobotoBold" />

        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/txtMoreVietNam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:text="More"
            android:textColor="@color/colorAccent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewRobotoVietnam"
            app:layout_constraintHorizontal_bias="0.906"
            app:layout_constraintLeft_toRightOf="@+id/textViewRobotoVietnam"
            app:layout_constraintRight_toRightOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_onl_charts_vietnam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewRobotoVietnam"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRobotoVietnam" />


        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/textViewRobotoNational"
            style="@style/TextTitleGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BXH quốc tế"
            app:textFonts="RobotoBold"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="@+id/textViewRobotoVietnam"
            app:layout_constraintRight_toRightOf="@+id/textViewRobotoVietnam"
            android:layout_marginRight="8dp"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/fragment_onl_charts_vietnam" />

        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/txtMoreNational"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="More"
            android:textColor="@color/colorAccent"
            app:layout_constraintBaseline_toBaselineOf="@+id/textViewRobotoNational"
            app:layout_constraintLeft_toLeftOf="@+id/txtMoreVietNam"
            app:layout_constraintRight_toRightOf="@+id/txtMoreVietNam" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_onl_charts_national"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewRobotoVietnam"
            android:layout_marginTop="24dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@+id/fragment_onl_charts_vietnam"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewRobotoNational" />


    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>

