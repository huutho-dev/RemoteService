<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:id="@+id/image_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/spacing_2_16dp"
        android:padding="@dimen/spacing_2_16dp"
        android:src="@drawable/ic_share_24dp" />

    <training.com.tplayer.custom.TextViewRoboto
        android:layout_marginTop="@dimen/spacing_2_16dp"
        android:id="@+id/share_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_toRightOf="@+id/image_share"
        android:lines="1"
        android:padding="@dimen/spacing_2_16dp"
        android:text="Share app"
        android:textSize="@dimen/text_4_medium_16sp" />

    <View
        android:id="@+id/line"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:layout_marginRight="@dimen/spacing_2_16dp"
        android:layout_below="@+id/image_share"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary"
        />


    <ImageView
        android:id="@+id/image_face"
        android:layout_width="@dimen/spacing_3_24dp"
        android:layout_height="@dimen/spacing_3_24dp"
        android:layout_below="@+id/line"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:layout_marginTop="@dimen/spacing_3_24dp"
        android:src="@drawable/facebook" />


    <training.com.tplayer.custom.TextViewRoboto
        android:id="@+id/share_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:layout_toRightOf="@+id/image_face"
        android:lines="1"
        android:layout_marginTop="@dimen/spacing_1_8dp"
        android:padding="@dimen/spacing_2_16dp"
        android:text="Share Social"
        android:textSize="@dimen/text_4_medium_16sp" />


    <include
        layout="@layout/layout_bottom_panel_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>