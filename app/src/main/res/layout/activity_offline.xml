<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/act_offline_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/spacing_2_16dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/act_offline_main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/act_offline_toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/act_offline_image_header"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/background_logo_header" />

            <LinearLayout
                android:id="@+id/act_offline_item_songs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_offline_image_header"
                android:layout_marginTop="@dimen/spacing_2_16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_7_56dp"
                    android:layout_height="@dimen/spacing_7_56dp"
                    android:layout_margin="@dimen/spacing_0_4dp"
                    android:background="@drawable/background_offline_icon_round"
                    android:padding="@dimen/spacing_2_16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_offline_song" />

                <training.com.tplayer.custom.TextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:paddingRight="@dimen/spacing_2_16dp"
                    android:text="@string/act_offline_item_song"
                    android:textSize="@dimen/text_3_14sp"
                    app:textFonts="RobotoMedium" />

            </LinearLayout>

            <include layout="@layout/view_sepator_line" />

            <LinearLayout
                android:id="@+id/act_offline_item_albums"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_offline_image_header"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_7_56dp"
                    android:layout_height="@dimen/spacing_7_56dp"
                    android:layout_margin="@dimen/spacing_0_4dp"
                    android:background="@drawable/background_offline_icon_round"
                    android:padding="@dimen/spacing_2_16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_offline_album" />

                <training.com.tplayer.custom.TextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:paddingRight="@dimen/spacing_2_16dp"
                    android:text="@string/act_offline_item_albums"
                    android:textSize="@dimen/text_3_14sp"
                    app:textFonts="RobotoMedium" />


            </LinearLayout>

            <include layout="@layout/view_sepator_line" />

            <LinearLayout
                android:id="@+id/act_offline_item_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_offline_image_header"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_7_56dp"
                    android:layout_height="@dimen/spacing_7_56dp"
                    android:layout_margin="@dimen/spacing_0_4dp"
                    android:background="@drawable/background_offline_icon_round"
                    android:padding="@dimen/spacing_2_16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_offline_artist" />

                <training.com.tplayer.custom.TextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:paddingRight="@dimen/spacing_2_16dp"
                    android:text="@string/act_offline_item_artists"
                    android:textSize="@dimen/text_3_14sp"
                    app:textFonts="RobotoMedium" />

            </LinearLayout>

            <include layout="@layout/view_sepator_line" />

            <LinearLayout
                android:id="@+id/act_offline_item_playlists"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_offline_image_header"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/spacing_7_56dp"
                    android:layout_height="@dimen/spacing_7_56dp"
                    android:layout_margin="@dimen/spacing_0_4dp"
                    android:background="@drawable/background_offline_icon_round"
                    android:padding="@dimen/spacing_2_16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_offline_playlist" />

                <training.com.tplayer.custom.TextViewRoboto
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:paddingRight="@dimen/spacing_2_16dp"
                    android:text="@string/act_offline_item_playlists"
                    android:textSize="@dimen/text_3_14sp"
                    app:textFonts="RobotoMedium" />

            </LinearLayout>

            <include layout="@layout/view_sepator_line" />

            <LinearLayout
                android:id="@+id/act_offline_item_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_offline_image_header"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_7_56dp"
                    android:layout_height="@dimen/spacing_7_56dp"
                    android:layout_margin="@dimen/spacing_0_4dp"
                    android:background="@drawable/background_offline_icon_round"
                    android:padding="@dimen/spacing_2_16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ofline_folder" />

                <training.com.tplayer.custom.TextViewRoboto
                    android:id="@+id/act_offline_txt_number_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:paddingRight="@dimen/spacing_2_16dp"
                    android:text="@string/act_offline_item_folder"
                    android:textSize="@dimen/text_3_14sp"
                    app:textFonts="RobotoMedium" />

            </LinearLayout>

            <include layout="@layout/view_sepator_line" />

            <LinearLayout
                android:id="@+id/act_offline_item_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/act_offline_image_header"
                android:layout_marginBottom="150dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/spacing_7_56dp"
                    android:layout_height="@dimen/spacing_7_56dp"
                    android:layout_margin="@dimen/spacing_0_4dp"
                    android:background="@drawable/background_offline_icon_round"
                    android:padding="@dimen/spacing_2_16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_ofline_folder_download" />

                <training.com.tplayer.custom.TextViewRoboto
                    android:id="@+id/act_offline_txt_number_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/spacing_2_16dp"
                    android:paddingRight="@dimen/spacing_2_16dp"
                    android:text="@string/act_offline_item_download"
                    android:textSize="@dimen/text_3_14sp"
                    app:textFonts="RobotoMedium" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/act_offline_scan_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/act_offline_music_not_ready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/act_offline_rescan" />

        <ImageView
            android:id="@+id/act_offline_button_scan"
            android:layout_marginTop="@dimen/spacing_2_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/act_offline_music_not_ready"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_re_scan_loading" />

    </RelativeLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/layout_bottom_panel_player"/>

</RelativeLayout>
