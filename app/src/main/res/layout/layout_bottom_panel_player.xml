<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_bottom_panel_player"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/panel_bottom_player_image"
            android:layout_width="@dimen/spacing_6_default_48dp"
            android:layout_height="@dimen/spacing_6_default_48dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/panel_bottom_player_title"
            android:layout_width="199dp"
            android:layout_height="18dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            app:layout_constraintLeft_toRightOf="@+id/panel_bottom_player_image"
            app:layout_constraintTop_toTopOf="parent"
            app:textFonts="RobotoMedium"
            tools:layout_editor_absoluteY="16dp" />

        <training.com.tplayer.custom.TextViewRoboto
            android:id="@+id/panel_bottom_player_artist"
            android:layout_width="199dp"
            android:layout_height="17dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="TextView"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/panel_bottom_player_image"
            app:layout_constraintTop_toBottomOf="@+id/panel_bottom_player_title"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_editor_absoluteY="38dp" />

        <ImageView
            android:id="@+id/panel_bottom_player_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/background_play_state"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/panel_bottom_player_forward"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/panel_bottom_player_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_player_forward"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</merge>
