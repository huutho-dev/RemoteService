<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/background_press"
    app:cardCornerRadius="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_item_recyclerview_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_layout_image_recycler_simple"
            android:scaleType="centerCrop" />

        <training.com.tplayer.custom.TextViewRoboto
            android:padding="2dp"
            android:id="@+id/layout_item_recyclerview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_item_recyclerview_image"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/spacing_1_8dp"
            android:text="Title"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/standard_caption"
            app:textFonts="RobotoBold" />

        <training.com.tplayer.custom.TextViewRoboto
            android:padding="2dp"
            android:id="@+id/layout_item_recyclerview_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_item_recyclerview_title"
            android:ellipsize="end"
            android:lines="1"
            android:paddingLeft="@dimen/spacing_1_8dp"
            android:text="Title"
            android:textColor="@color/colorTextSecondary"
            android:textSize="@dimen/standard_caption"
            app:textFonts="RobotoLight" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
