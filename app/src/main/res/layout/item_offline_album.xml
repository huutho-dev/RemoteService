<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_press"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    
    <ImageView
        android:id="@+id/item_fragment_album_art"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:scaleType="centerCrop"
        android:padding="@dimen/spacing_0_4dp"
        android:src="@drawable/ic_offline_album"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <training.com.tplayer.custom.TextViewRoboto
        android:id="@+id/item_fragment_album_title"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/item_fragment_album_artist"
        app:layout_constraintRight_toRightOf="@+id/item_fragment_album_artist"
        app:layout_constraintTop_toBottomOf="@+id/item_fragment_album_artist"
        app:layout_constraintVertical_bias="0.0" />

    <training.com.tplayer.custom.TextViewRoboto
        android:id="@+id/item_fragment_album_artist"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:ems="10"
        android:inputType="textPersonName"
        android:lines="1"
        android:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/item_fragment_album_art"
        app:layout_constraintTop_toTopOf="parent"
        app:textFonts="RobotoMedium"
        tools:layout_editor_absoluteY="24dp" />

    <ImageView
        android:id="@+id/item_fragment_album_context_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:src="@drawable/ic_item_context_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintLeft_toRightOf="@+id/item_fragment_album_artist"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:layout_marginRight="@dimen/spacing_2_16dp"
        android:background="#bfc1c1c1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <training.com.tplayer.custom.TextViewRoboto
        android:textSize="@dimen/text_2_12sp"
        android:id="@+id/item_fragment_album_number_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/item_fragment_album_artist"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/item_fragment_album_context_menu"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.507" />
</android.support.constraint.ConstraintLayout>