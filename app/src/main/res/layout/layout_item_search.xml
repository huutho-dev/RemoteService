<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_6_default_48dp"
    android:layout_margin="@dimen/spacing_0_4dp"
    android:background="@color/colorAccent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_search_image"
        android:layout_width="@dimen/spacing_6_default_48dp"
        android:layout_height="@dimen/spacing_6_default_48dp"
        android:background="@color/colorPrimary"
        android:padding="@dimen/spacing_1_8dp"
        android:src="@drawable/ic_offline_song" />

    <training.com.tplayer.custom.TextViewRoboto
        android:id="@+id/item_search_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/spacing_2_16dp"
        android:text="Name"
        android:textColor="@color/colorWhite" />

</LinearLayout>