<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D1607D8B"/>
        </shape>
    </item>


    <item
        android:bottom="@dimen/player_size_header_revert"
        android:left="0dp"
        android:right="@dimen/player_size_header_revert"
        android:top="@dimen/player_size_header">
        <rotate
            android:fromDegrees="-12"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape android:shape="rectangle">
                <solid android:color="@color/colorWhite" />
            </shape>
        </rotate>
    </item>
</layer-list>